FROM golang:1.19-alpine

WORKDIR /app

# 安装必要的工具
RUN apk add --no-cache gcc musl-dev

# 复制依赖文件
COPY go.mod go.sum ./
RUN go mod download

# 复制源代码和配置文件
COPY . .

# 创建配置和日志目录
RUN mkdir -p /app/config /app/log

# 构建应用
RUN go build -o main main.go

# 暴露端口
EXPOSE 8080

# 运行应用
CMD ["./main"]